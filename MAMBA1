_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $MAMBA_REPO == "MAMBABOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1NVS0hQQUw0NDMvTUFNQkEyL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
    elif [[ $MAMBA_REPO == "MAMBA" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1NVS0hQQUw0NDMvTUFNQkEyL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
    elif [[ $MAMBA_REPO =~ $regex ]]
    then
        if [[ $MAMBA_REPO_BRANCH ]]
        then
            echo "${MAMBA_REPO}/archive/${MAMBA_REPO_BRANCH}.zip"
        else
            echo "${MAMBA_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1NVS0hQQUw0NDMvTUFNQkEyL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="MAMBABOT.zip"
    echo "  Downloading PythonBot V9.O.8 Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    MAMBAPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  MambaBot V9.O.8 Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $MAMBAPATH
    echo "    üêç—ïœÑŒ±—èœÑŒπ–∏g —ï–ºŒøŒøœÑ–Ω—î—ïœÑ  ç«ü ç…Æ«ü V9.O.8üêç     "
    echo "
    MAMBABOT
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_set_bot
